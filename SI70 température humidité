#include "SparkFun_Si7021_Breakout_Library.h"
#include <Wire.h>

//branchement du SI70 5V, GND, SCL en A5, SDA en A4 
float humidity = 0;
float tempf = 0;

Weather sensor;


void setup() {
  // put your setup code here, to run once:
Serial.begin(9600);
sensor.begin();
 
}

void loop() {
  
  // lit les 2 valeurs sur le capteur SI70:
    humidity = sensor.getRH();
     tempf = sensor.getTemp();
   
 //écrit les valeurs sur le port série
  Serial.print("Temp:");
  Serial.print(tempf);
  Serial.print("C, ");

  Serial.print("Humidity:");
  Serial.print(humidity);
  Serial.println("%");
  delay(1000);
}
